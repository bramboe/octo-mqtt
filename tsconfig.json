{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@utils/*": ["Utils/*"],
      "@mqtt/*": ["MQTT/*"],
      "@strings/*": ["Strings/*"],
      "@homeassistant/*": ["HomeAssistant/*"],
      "@octo/*": ["Octo/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],

  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true
  }
}
