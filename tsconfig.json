{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist/tsc/",
    "types": ["node"],
    "lib": ["ES2021"],
    "baseUrl": "./src",
    "paths": {
      "@ha/*": ["HomeAssistant/*"],
      "@mqtt/*": ["MQTT/*"],
      "@utils/*": ["Utils/*"],
      "@ble/*": ["BLE/*"],
      "@esphome/*": ["ESPHome/*"],
      "@common/*": ["Common/*"],
      "@octo/*": ["Octo/*"],
      "@scanner/*": ["Scanner/*"],
      "*": ["*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],

  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
