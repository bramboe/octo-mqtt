#!/usr/bin/with-contenv bashio

# Log startup with unique identifier
echo "üöÄ Starting Octo MQTT addon v2.0.8..."
echo "üìÖ Build: v2025.05.27.1"
echo "‚ö° Process ID: $$"
echo "üîß Repository: https://github.com/bramboe/octo-mqtt"
echo "üè∑Ô∏è  Git Tag: v2.0.8"
echo "üîÑ Cache Bust: 20250527120000"

# Change to application directory
cd /app || exit 1

# Check if any Node.js processes are already running on port 3000
if netstat -tulpn 2>/dev/null | grep -q ':3000 '; then
    echo "‚ö†Ô∏è  Port 3000 already in use! Killing existing processes..."
    pkill -f "node.*3000" || true
    sleep 2
fi

# Create data directory
mkdir -p /data

# Log debug info
echo "Working directory: $(pwd)"
echo "Node version: $(node --version)"
echo "Files:"
ls -la

# Check which version we're actually running
if [ -f "dist/tsc/index.js" ]; then
    echo "‚úÖ TypeScript build found: dist/tsc/index.js"
    echo "üìä Built file size: $(ls -lh dist/tsc/index.js | awk '{print $5}')"
    
    # Read MQTT configuration from Home Assistant
    if [ -f "/data/options.json" ]; then
        echo "üìã Configuration:"
        echo "  MQTT Host: $(jq -r '.mqtt_host // "core-mosquitto"' /data/options.json)"
        echo "  MQTT Port: $(jq -r '.mqtt_port // 1883' /data/options.json)"
        echo "  MQTT Username: $(jq -r '.mqtt_user // ""' /data/options.json)"
        echo "  MQTT Password: $(if [ "$(jq -r '.mqtt_password // ""' /data/options.json)" = "" ]; then echo "<empty>"; else echo "<hidden>"; fi)"
        echo "  Log Level: $(jq -r '.log_level // "info"' /data/options.json)"
    fi
    
    echo "üéØ Starting application with: dist/tsc/index.js"
    exec node dist/tsc/index.js
else
    echo "‚ö†Ô∏è  TypeScript build not found, using fallback: index.js"
    echo "üìÑ Fallback file size: $(ls -lh index.js | awk '{print $5}')"
    echo "üéØ Starting fallback application with: index.js"
    exec node index.js
fi
