{
  "extends": "./tsconfig.json",
  "exclude": ["src/**/*.test.ts", "src/**/*.spec.ts", "test/**/*"],
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist/tsc",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@utils/*": ["Utils/*"],
      "@mqtt/*": ["MQTT/*"],
      "@ble/*": ["BLE/*"]
    }
  },
  "include": ["src/**/*"]
}
